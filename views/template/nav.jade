.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.logo
        a(href="/")
          img(src='/images/logo.png')
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
        li.divider
        li: a(href="/admin") Admin
      ul.right

        li.divider
        if user
          li.username= 'Logged in as: ' + user.email
          li.divider
          li: a#logout-button(href="#") Logout
        else
          li: a(href="/register") Register
          li.divider
          li: a(href="/login") Login

.row
  .small-12.columns
    h3= heading
