.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") LOGO
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
        li.divider
        li: a(href="/todos") To-Dos
      ul.right

        li.divider
        if userName
          li.username= 'Logged in as: ' + userName
          li.divider
          li: a#logout-button(href="#") Logout
        else
          li: a(href="/register") Register
          li.divider
          li: a(href="/login") Login

.row
  .small-12.columns
    h3= heading
