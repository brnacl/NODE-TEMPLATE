extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      if posts
        each post in posts
          h3.subheader= post.title
          .row
            .small-6.columns.content
              p= post.content
            .small-6.columns.images
              each image in post.files
                img(src='/uploads/#{post.id}/#{image.name}')