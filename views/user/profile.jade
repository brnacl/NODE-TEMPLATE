extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      span: a(href='/account/edit') Edit Account Info
      span= ' | '
      span: a(href='/profile/edit') Edit Profile Info
  .row
    .small-12.columns
      p
        h4 Name:
        span= profile.firstName
        span= profile.lastName
      p
        h4 Email Address:
        span= user.email
      p
        h4 Location:
        span= profile.city
        span= profile.state